@model IEnumerable<CafeApp.DomainEntity.Table>

@{
    Layout = "~/Views/Shared/Customer_Layout.cshtml";
}

@if (ViewBag.TableStatus == "Occupied")
{
    <h2>Change Table</h2>
}
else
{
    <h2>Confirm Order</h2>
}



<style>

    .flex-container {
        float: left;
        display: flex;
        width: 290px;
        border: 3px solid darkblue;
        padding: 40px;
        margin: 35px;
        text-align: center;
        font-size: 20px;
        background-color: aliceblue;
    }

    .flex-container1 {
        float: left;
        display: flex;
        width: 290px;
        border: 3px solid darkblue;
        padding: 40px;
        margin: 35px;
        text-align: center;
        font-size: 20px;
        background-color: aquamarine;
    }

    dt {
        margin-left: 55px;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.Label("Table No :")
        @Html.DropDownList("EmptySeatsList", null, htmlAttributes: new { @class = "form-control" })
    </div>

    <div>
        <input type="submit" value="Confirm" class="btn btn-default" />
    </div>


    foreach (var item in Model)
    {
        if (item.TableStatus == CafeApp.DomainEntity.TableStatus.Empty)
        {
            <div class="flex-container">
                <dl>
                    <dt>
                        @item.TableNo
                    </dt>
                    <dt>
                        @item.TableStatus
                    </dt>
                </dl>
            </div>
        }
        else
        {
            <div class="flex-container1">
                <dl>
                    <dt>
                        @item.TableNo (@Html.DisplayFor(modelItem => item.UserRoles.Username))
                    </dt>
                    <dt>
                        @item.TableStatus
                    </dt>
                </dl>
            </div>
        }
    }
}


