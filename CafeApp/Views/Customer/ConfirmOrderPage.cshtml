@model IEnumerable<CafeApp.DomainEntity.Table>

@{
    Layout = "~/Views/Shared/Customer_Layout.cshtml";
}

@if (ViewBag.TableStatus == "Occupied")
{
    <h2>Change Table</h2>
}
else
{
    <h2>Confirm Order</h2>
}



<style>
    .flex-container {
        float: left;
        display: flex;
        width: 320px;
        border: 1px solid black;
        padding: 15px;
        margin: 25px;
        text-align: center;
        font-size: 20px;
        height: 270px;
    }

    .flex-container1 {
        float: left;
        display: flex;
        width: 320px;
        border: 1px solid black;
        padding: 15px;
        margin: 25px;
        text-align: center;
        font-size: 20px;
        height: 270px;
    }

    dt {
        margin-left: 35px;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.Label("Table No :")
        @Html.DropDownList("EmptySeatsList", null, htmlAttributes: new { @class = "form-control" })
    </div>

    <div>
        <input type="submit" value="Confirm" class="btn btn-default" />
    </div>


    foreach (var item in Model)
    {
        if (item.TableStatus == CafeApp.DomainEntity.TableStatus.Empty)
        {
            <div class="flex-container">
                <dl>
                    <dt>
                        <img src="~/Images/Table1.png" />
                    </dt>
                    <dt>
                        T[@item.TableNo]
                    </dt>
                    <dt>
                        @item.TableStatus
                    </dt>
                </dl>
            </div>
        }
        else
        {
            <div class="flex-container1">
                <dl>
                    <dt>
                        <img src="~/Images/output-onlinepngtools.png" />
                    </dt>
                    <dt>
                        T[@item.TableNo] (@Html.DisplayFor(modelItem => item.User.Username))
                    </dt>
                    <dt>
                        @item.TableStatus
                    </dt>
                </dl>
            </div>
        }
    }
}


