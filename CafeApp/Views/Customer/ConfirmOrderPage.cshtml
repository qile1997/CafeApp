@model CafeApp.DomainEntity.Table

@{
    Layout = "~/Views/Shared/Customer_Layout.cshtml";
}

<h2>Confirm Order</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Select Table</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TableNo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmptySeatsList", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Confirm" class="btn btn-default" id="ConfirmOrder" />*@
                <button class="btn btn-default">Confirm</button>
            </div>
        </div>
    </div>

    <div id="successmessage" style="color:green"></div>
}

<div>
    @Html.ActionLink("Back to Cart", "OrderCart")
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".btn").click(function () {
            var emptyseat = $("#EmptySeatsList").val();
            $.ajax({
                type: "POST",
                url: "/Customer/ConfirmOrder",
                data: { Seat: emptyseat },
                success: function (response) {
                    $("#successmessage").text(Object.keys(response));
                }
            })
        })
    })

</script>
