@model IEnumerable<CafeApp.DomainEntity.Table>

@{
    Layout = "~/Views/Shared/Cashier_Layout.cshtml";
}

<h2>Table</h2>
<hr />
<head>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
</head>

<style>


    .flex-container {
        float: left;
        display: flex;
        width: 290px;
        border: 3px solid darkblue;
        padding: 40px;
        margin: 35px;
        text-align: center;
        font-size: 20px;
        background-color: aliceblue;
    }

    .flex-container1 {
        float: left;
        display: flex;
        width: 290px;
        border: 3px solid darkblue;
        padding: 40px;
        margin: 35px;
        text-align: center;
        font-size: 20px;
        background-color: aquamarine;
    }

    dt {
        margin-left: 55px;
    }
</style>


@using (Html.BeginForm())
{
    foreach (var item in Model)
    {
        if (item.TableStatus == CafeApp.DomainEntity.TableStatus.Occupied)
        {
            <div class="flex-container1">
                <dl>
                    <dt>
                        T[@item.TableNo] (@Html.DisplayFor(modelItem=>item.UserRoles.Username))
                    </dt>
                    <dt>
                        @item.TableStatus
                    </dt>
                </dl>
            </div>
        }
        else
        {
            <div class="flex-container">
                <dl>
                    <dt>
                        T[@item.TableNo]
                    </dt>
                    <dt>
                        @item.TableStatus
                    </dt>
                    <dt class="fas fa-utensils">

                    </dt>
                </dl>
            </div>
        }
    }
}


