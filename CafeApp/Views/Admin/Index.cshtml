@model IEnumerable<CafeApp.DomainEntity.User>

@{
    ViewBag.Title = "Index";
}

<h2>Manage</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Username)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Password)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Roles)
    </td>
    @if (item.Username == "admin" && item.Password == "admin" && item.Roles == CafeApp.DomainEntity.Roles.Admin)
    {
        <td>
 
        </td>
    }
    else
    {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.UserRolesId }) |
            @if (Convert.ToInt32(Session["AdminId"]) != item.UserRolesId)
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.UserRolesId })
            }
        </td>
    }
</tr>
    }

</table>
